body {
  display: flex;
}


.header  {
  font-family: monospace;
  background: papayawhip;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  flex: 1;
}

.logo {
  font-size: 48px;
  font-weight: 900;
  color: tomato;
  background: white;
  padding: 4px 32px;
  margin: 5px 3px;
}

.left-links {
  margin-right: auto;
  flex: 0 1 auto;
}

.right-links {
  margin-left: auto;
  flex: 0 1 auto;
}


ul {
  /* this removes the dots on the list items*/
  list-style-type: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex: 1;
}

a {
  font-size: 22px;
  background: white;
  padding: 8px;
  /* this removes the line under the links */
  text-decoration: none;
}

li {
  margin: 0 3px;
  flex: 1;
}